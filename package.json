{
  "name": "Treasury",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^4.1.1",
    "@sap-cloud-sdk/http-client": "^3.12.0",
    "@sap-cloud-sdk/resilience": "^4.0.2",
    "@sap/cds": "^9.2.1",
    "@sap/cds-compiler": "4.8.0",
    "@sap/cds-dk": "^9",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/hana-client": "^2.25.29",
    "@sap/xssec": "^4.8.0",
    "axios": "^1.11.0",
    "dompurify": "^3.2.6",
    "express": "^4",
    "form-data": "^4.0.4",
    "hana": "^0.0.2",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "sap-cf-axios": "^1.0.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@sap/cds-dk": "^9",
    "@sap/hdi-deploy": "4.9.5",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5",
    "ui5-middleware-simpleproxy": "^3.4.3"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-browsebooks": "cds watch --open browsebooks/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy Treasury --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-treasuryui": "cds watch --open treasuryui/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-content-ingestion": "cds watch --open content-ingestion/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-contentrepository": "cds watch --open contentrepository/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "joe": {
              "roles": [
                "ContentMaker",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
            }
          }
        }
      },
      "db": {
        "[production]": {
          "kind": "hana-cloud"
        },
        "[development]": {
          "kind": "hana-cloud"
        },
        "model": [
          "db",
          "srv"
        ]
      },
      "xsuaa-api": {
        "kind": "rest",
        "credentials": {
          "url": "",
          "forwardAuthToken": true
        }
      },
      "treasuryUpload": {
        "kind": "xsuaa",
        "credentials": {
          "destination": "treasuryUpload"
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/browsebooks",
    "app/content-ingestion",
    "app/contentrepository"
  ]
}
